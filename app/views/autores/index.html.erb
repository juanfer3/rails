<h1>Autores</h1>
<div class="z-depth-4">
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @autores.each do |autor| %>
        <tr>
          <td><%= autor.nombre %></td>
          <td><%= link_to 'Show', autor %></td>
          <td><%= link_to 'Edit', edit_autor_path(autor) %></td>
          <td><%= link_to 'Destroy', autor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
